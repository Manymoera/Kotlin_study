<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lab_4.Activity_lab3">

    <Button
        android:id="@+id/buttonPressDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="580dp"
        android:text="Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPressDate"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="520dp"
        android:hint="Click on a button to select a date"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="410dp"
        android:layout_height="4dp"
        android:layout_marginTop="496dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/buttonLab3Back"
        android:layout_width="154dp"
        android:layout_height="72dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="16dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLab3Next"
        android:layout_width="155dp"
        android:layout_height="81dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="104dp"
        android:text="Next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewStack"
        android:layout_width="153dp"
        android:layout_height="34dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="204dp"
        android:text="Stack depth: 0"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="410dp"
        android:layout_height="4dp"
        android:layout_marginTop="248dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/buttonPageAdd"
        android:layout_width="97dp"
        android:layout_height="62dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="272dp"
        android:text="Add page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPageDel"
        android:layout_width="97dp"
        android:layout_height="62dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="272dp"
        android:text="Delete page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPageView"
        android:layout_width="97dp"
        android:layout_height="62dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="272dp"
        android:text="View page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="410dp"
        android:layout_height="4dp"
        android:layout_marginTop="352dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <TextView
        android:id="@+id/textViewPressText"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="380dp"
        android:hint="Click on a button to add text here"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="436dp"
        android:text="Write"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSwap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="304dp"
        android:layout_marginTop="664dp"
        android:text="Next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>